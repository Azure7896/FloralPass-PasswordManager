<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a363b">

    <TextView
        android:id="@+id/smallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Autor: Szymon Napora 7ION"
        android:textColor="#fcdab7" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/floralpasslogo" />

    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Zarejestruj się"
        android:textSize="24sp"
        android:textColor="#fcdab7"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Wpisz swoje imię..."
        android:inputType="text"
        android:backgroundTint="#fcdab7"
        android:textColor="#fcdab7"
        android:textColorHint="#fcdab7" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameField"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Wpisz hasło..."
        android:inputType="textPassword"
        android:backgroundTint="#fcdab7"
        android:textColor="#fcdab7"
        android:textColorHint="#fcdab7" />

    <EditText
        android:id="@+id/repeatPasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordField"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Powtórz hasło..."
        android:inputType="textPassword"
        android:backgroundTint="#fcdab7"
        android:textColor="#fcdab7"
        android:textColorHint="#fcdab7" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repeatPasswordField"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/utw_rz_nowe_konto"
        android:drawableRight="@drawable/baseline_app_registration_24"
        android:backgroundTint="#fcdab7"
        android:textColor="#2a363b" />


    <TextView
        android:id="@+id/informationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Witaj, nowy użytkowniku! FloralPass jest aplikacją która pozwala bezpiecznie przechowywać hasła w jednym miejscu."
        android:textColor="#fcdab7"
        android:gravity="center"
        android:layout_gravity="center" />

</RelativeLayout>
